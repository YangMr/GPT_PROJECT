page {
  background-color: #f6f8fe;
}
.nav_bar_custom {
  height: var(--462bf4ca);
  background-color: red;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 99;
  background: linear-gradient(to bottom, #b3cffa, #f6f8fe);
}
.nav_bar_custom image {
  width: 50rpx;
  display: block;
  margin: 0 20rpx;
}
.top_height {
  height: var(--18419af1);
}
.nav_content {
  display: flex;
  align-items: center;
}
.nav_text {
  display: flex;
  flex-direction: column;
}
.nav_text text:nth-child(1) {
  font-weight: bold;
  font-size: 28rpx;
}
.nav_text text:nth-child(2) {
  font-size: 25rpx;
  color: #798189;
}
.Sent_information {
  padding: 10px;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 10rpx;
  line-height: 1.5;
  font-size: 29rpx;
}
.your-element {
  animation-name: fadeInFromTop;
  animation-duration: 2s;
  animation-timing-function: ease-in;
  animation-fill-mode: forwards;
}
@keyframes fadeInFromTop {
0% {
    opacity: 0;
    transform: translateY(30px);
}
100% {
    opacity: 1;
    transform: translateY(0);
}
}